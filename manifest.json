{
	"manifest_version": 3,
	"name": "Paywall Unlocker",
	"short_name": "punlock",
	"description": "Unlocks paywalls from various websites",
	"version": "1.1",
	"icons": {
		"16": "16.png",
		"48": "48.png",
		"128": "128.png"
	},
	"permissions": ["activeTab", "declarativeNetRequest", "declarativeNetRequestFeedback"],
	"host_permissions": [
		"https://fortune.com/*/*/*/*/*",
		"https://www.acorianooriental.pt/noticia/*",
		"https://www.bloomberg.com/*/*/*/*"
	],
	"declarative_net_request": {
		"rule_resources": [{
			"id": "block_transform_script_ruleset",
			"enabled": false,
			"path": "json/rules_1.json"
		}]
	},
	"content_scripts": [
		{
			"matches": ["https://fortune.com/*/*/*/*/*"],
			"js": ["js/content-fortune.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["https://www.acorianooriental.pt/noticia/*"],
			"js": ["js/content-acoreano.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["https://www.bloomberg.com/*/*/*/*"],
			"js": ["js/content-bloomberg.js"],
			"run_at": "document_end"
		}
	]
}
